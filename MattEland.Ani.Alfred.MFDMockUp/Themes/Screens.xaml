<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:screens="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.ViewModels.Screens"
                    xmlns:views="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.Views">

    <!--  View Mappings  -->
    <DataTemplate DataType="{x:Type screens:BootupScreenViewModel}">
        <views:StandbyScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type screens:HomeScreenViewModel}">
        <views:MFDHomeScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type screens:AlfredScreenViewModel}">
        <views:AlfredScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type screens:LogScreenViewModel}">
        <views:LogScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type screens:SystemPerformanceScreenViewModel}">
        <views:SystemPerformanceScreenView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type screens:BuiltInTestsScreenViewModel}">
        <views:BuiltInTestsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type screens:NotImplementedScreenViewModel}">
        <views:NotImplementedScreenView />
    </DataTemplate>


</ResourceDictionary>