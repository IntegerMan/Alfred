<UserControl x:Class="MattEland.Ani.Alfred.MFDMockUp.Controls.FaultIndicatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.ViewModels"
             Width="45"
             Margin="1"
             d:DataContext="{d:DesignInstance viewModels:FaultIndicatorViewModel}"
             mc:Ignorable="d">
    <Border VerticalAlignment="Center"
            Background="#13171C"
            BorderBrush="#212528"
            BorderThickness="2"
            Padding="2">
        <TextBlock x:Name="lblIndicator"
                   HorizontalAlignment="Stretch"
                   FontFamily="{StaticResource ConsoleFontFamily}"
                   FontSize="6pt"
                   Foreground="#212528"
                   Text="{Binding Path=IndicatorLabel}"
                   TextAlignment="Center" />
    </Border>
</UserControl>
