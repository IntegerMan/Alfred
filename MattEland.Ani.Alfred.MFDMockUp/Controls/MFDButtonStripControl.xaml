<UserControl x:Class="MattEland.Ani.Alfred.MFDMockUp.Controls.MFDButtonStripControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.ViewModels"
             x:Name="mfdButtonStrip"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             HorizontalContentAlignment="Center"
             VerticalContentAlignment="Center"
             d:DataContext="{d:DesignInstance viewModels:MFDButtonStripViewModel}"
             d:DesignHeight="50"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <StackPanel Orientation="{Binding Path=Orientation}">

        <Button Style="{StaticResource MFDButtonStyle}" />

        <Button Style="{StaticResource MFDButtonStyle}" />

        <Button Style="{StaticResource MFDButtonStyle}" />

        <Button Style="{StaticResource MFDButtonStyle}" />

        <Button Style="{StaticResource MFDButtonStyle}" />

    </StackPanel>

</UserControl>
