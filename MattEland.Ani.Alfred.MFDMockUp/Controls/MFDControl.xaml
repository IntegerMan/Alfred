<UserControl x:Class="MattEland.Ani.Alfred.MFDMockUp.Controls.MFDControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:MFDViewModel}"
             mc:Ignorable="d">

    <Border x:Name="borderPanel"
            Background="{StaticResource MFDPanelBackgroundBrush}"
            BorderBrush="{StaticResource MFDPanelBorderBrush}"
            BorderThickness="1">

        <DockPanel>

            <Border Background="{StaticResource MFDScreenBorderBrush}" DockPanel.Dock="Top">
                <TextBlock Margin="{StaticResource StandardMargin}"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource AppForegroundBrush}"
                           Text="{Binding Path=Name}" />
            </Border>

            <Grid Margin="{StaticResource StandardMargin}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <controls:MFDButtonStripControl Grid.Row="0"
                                                Grid.Column="1"
                                                Orientation="Horizontal" />

                <controls:MFDButtonStripControl Grid.Row="1"
                                                Grid.Column="0"
                                                Orientation="Vertical" />

                <Border x:Name="borderScreen"
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="{StaticResource MFDScreenBackgroundBrush}"
                        BorderBrush="{StaticResource MFDScreenBorderBrush}"
                        BorderThickness="1"
                        Padding="{StaticResource StandardMargin}">
                    <Viewbox Width="512"
                             Height="512"
                             Stretch="Uniform"
                             StretchDirection="Both">
                        <ContentPresenter />
                    </Viewbox>
                </Border>

                <controls:MFDButtonStripControl Grid.Row="1"
                                                Grid.Column="2"
                                                Orientation="Vertical" />

                <controls:MFDButtonStripControl Grid.Row="2"
                                                Grid.Column="1"
                                                Orientation="Horizontal" />


            </Grid>
        </DockPanel>
    </Border>
</UserControl>