<Application x:Class="MattEland.Ani.Alfred.MFDMockUp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.ViewModels"
             xmlns:controls="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.Controls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MattEland.Ani.Alfred.MFDMockUp;component/Resources/MFDButtonStyling.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <vm:ViewModelLocator x:Key="Locator"/>
            
            <Brush x:Key="DisabledTextBrush">#FF838383</Brush>
            <Brush x:Key="AppBackgroundBrush">#2D2D30</Brush>

            <ImageSource x:Key="AppIcon">Resources/alfred.ico</ImageSource>
            
            <DataTemplate x:Key="InteractiveMFDDataTemplate" DataType="viewModels:MFDViewModel">
                <controls:MFDControl Width="512" 
                                     Height="512"
                                     Margin="8"/>
            </DataTemplate>

        </ResourceDictionary>

    </Application.Resources>
</Application>
