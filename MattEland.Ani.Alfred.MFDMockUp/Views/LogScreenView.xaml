<UserControl x:Class="MattEland.Ani.Alfred.MFDMockUp.Views.LogScreenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:screens="clr-namespace:MattEland.Ani.Alfred.MFDMockUp.ViewModels.Screens"
             Style="{StaticResource MFDViewStyle}"
             d:DataContext="{d:DesignInstance screens:AlfredScreenViewModel}"
             d:DesignHeight="256"
             d:DesignWidth="256"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="\Themes\Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </UserControl.Resources>
    <DockPanel>
        <!--  Module Title  -->
        <TextBlock Margin="{StaticResource TopMargin}"
                   DockPanel.Dock="Top"
                   Style="{StaticResource MFDViewCenterTextStyle}"
                   Text="Alfred Event Log"
                   TextWrapping="Wrap" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" />

    </DockPanel>
</UserControl>
