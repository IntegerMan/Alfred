<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:converters="clr-namespace:MattEland.Ani.Alfred.WPF.Converters">

    <!-- Converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"
                                  WarningBrush="{StaticResource CautionForegroundBrush}"
                                  InfoBrush="{StaticResource AccentForegroundBrush}"
                                  VerboseBrush="{StaticResource AppForegroundBrush}"
                                  ErrorBrush="{StaticResource ErrorForegroundBrush}" />

    <!-- Font Sizes -->
    <system:Double x:Key="FontSizeSmall">10</system:Double>

    <!-- Thicknesses -->
    <Thickness x:Key="TextSpacingMargin">4,0,0,0</Thickness>

</ResourceDictionary>