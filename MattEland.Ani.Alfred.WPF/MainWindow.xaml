<Window x:Class="MattEland.Ani.Alfred.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:MattEland.Ani.Alfred.Core;assembly=MattEland.Ani.Alfred.Core"
        xmlns:resources="clr-namespace:MattEland.Ani.Alfred.WPF.Properties"
        xmlns:console="clr-namespace:MattEland.Ani.Alfred.Core.Console;assembly=MattEland.Ani.Alfred.Core"
        mc:Ignorable="d"
        Background="{StaticResource AppBackgroundBrush}"
        Foreground="{StaticResource AppForegroundBrush}"
        Title="{Binding Path=NameAndVersion}" 
        Width="800" 
        Height="600" 
        Loaded="OnWindowLoaded"
        Closing="OnWindowClosing"
        d:DataContext="{d:DesignInstance core:AlfredProvider}">

    <DockPanel>

        <!-- Header -->
        <Border DockPanel.Dock="Top"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource AppBorderBrush}"
                Background="{StaticResource MediumBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"                       
                           VerticalAlignment="Center"                       
                           Margin="8" 
                           Text="{x:Static resources:Resources.ConsoleHeader}" />

                <TextBlock Grid.Column="1"                       
                           VerticalAlignment="Center"                       
                           Margin="8"                            
                           Text="{x:Static resources:Resources.ModulesHeader}" />

            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border DataContext="{Binding Path=Console}"
                Background="{StaticResource LightBackgroundBrush}"                                    
                BorderThickness="0,0,1,0"
                BorderBrush="{StaticResource AppBorderBrush}"
                DockPanel.Dock="Left"
                Width="250">

            <ScrollViewer d:DataContext="{d:DesignInstance console:SimpleConsole}" 
                          BorderThickness="0"
                          VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding Path=Events}"                                                        
                              BorderThickness="0"
                              FontSize="{StaticResource FontSizeSmall}" />

            </ScrollViewer>

        </Border>

        <!-- Main Content Area -->
        <Border BorderThickness="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          BorderThickness="0"
                          Padding="4">
                <ItemsControl ItemsSource="{Binding Modules}" 
                              BorderThickness="0"/>
            </ScrollViewer>
        </Border>

    </DockPanel>

</Window>
