<Window x:Class="MattEland.Ani.Alfred.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:core="clr-namespace:MattEland.Ani.Alfred.Core;assembly=MattEland.Ani.Alfred.Core"
        xmlns:resources="clr-namespace:MattEland.Ani.Alfred.WPF.Properties"
        mc:Ignorable="d"
        Background="{StaticResource AppBackgroundBrush}"
        Foreground="{StaticResource AppForegroundBrush}"
        Title="{Binding Path=NameAndVersion}" 
        Width="800" 
        Height="600" 
        Loaded="OnWindowLoaded"
        Closing="OnWindowClosing"
        d:DataContext="{d:DesignInstance core:AlfredProvider}">

    <DockPanel>

        <!-- Header Bar -->
        <Border DockPanel.Dock="Top"
                Background="{StaticResource MediumBackgroundBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource AppBorderBrush}"
                MinHeight="32">

            <StackPanel Orientation="Horizontal"    
                        HorizontalAlignment="Center"                         
                        VerticalAlignment="Center">

                <TextBlock Text="{Binding NameAndVersion}"  />
                <TextBlock Text=" - " Margin="4,0,4,0" />
                <TextBlock Text="{Binding Status}" 
                           Foreground="{StaticResource AccentForegroundBrush}"/>

            </StackPanel>

        </Border>

        <!-- Tabbed Content Regions -->
        <TabControl Margin="8, 16, 8, 8">

            <!-- Modules -->
            <TabItem Header="{x:Static resources:Resources.ModulesHeader}"
                 DataContext="{Binding Path=Modules}">

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="8">
                    <ItemsControl ItemsSource="{Binding}"                            
                              BorderThickness="0">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>
                </ScrollViewer>

            </TabItem>

            <!-- Console -->
            <TabItem Header="{x:Static resources:Resources.ConsoleHeader}"
                 DataContext="{Binding Path=Console}">

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="8">
                    <ItemsControl ItemsSource="{Binding Path=Events}"                                                        
                          BorderThickness="0"                          
                          FontSize="{StaticResource FontSizeSmall}" />
                </ScrollViewer>

            </TabItem>

        </TabControl>

    </DockPanel>

</Window>
