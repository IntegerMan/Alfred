<Window x:Class="MattEland.Ani.Alfred.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:win="clr-namespace:MattEland.Ani.Alfred.WPF"
        xmlns:core="clr-namespace:MattEland.Ani.Alfred.Core;assembly=MattEland.Ani.Alfred.Core"
        mc:Ignorable="d"
        Background="{StaticResource AppBackgroundBrush}"
        Foreground="{StaticResource AppForegroundBrush}"
        Title="{Binding Path=NameAndVersion}" 
        Width="800" 
        Height="600" 
        Loaded="OnWindowLoaded"
        Closing="OnWindowClosing"
        d:DataContext="{d:DesignInstance core:AlfredProvider}">
    
    <Window.Resources>
        
    </Window.Resources>
    <DockPanel>


        <Border DataContext="{Binding Path=Console}"
                DockPanel.Dock="Left">
            <DockPanel d:DataContext="{d:DesignInstance win:WinClientConsole}"
                       Margin="0,8,8,0"
                       Width="250">
                <TextBlock DockPanel.Dock="Top" 
                           Margin="8,0,0,0">
                    Console Events
                </TextBlock>
                <ScrollViewer Background="{StaticResource LightBackgroundBrush}"                
                                                  Margin="0,8,0,0"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Path=Events}"                              
                                  FontSize="{StaticResource FontSizeSmall}" />
                </ScrollViewer>
            </DockPanel>
        </Border>

        <DockPanel Margin="8">
            <TextBlock Text="Modules" DockPanel.Dock="Top" />
            <ScrollViewer
                VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding Modules}" />
                
            </ScrollViewer>
        </DockPanel>
    </DockPanel>

</Window>
