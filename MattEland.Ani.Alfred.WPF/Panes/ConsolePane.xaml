<UserControl x:Class="MattEland.Ani.Alfred.WPF.Panes.ConsolePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:console="clr-namespace:MattEland.Ani.Alfred.Core.Console;assembly=MattEland.Ani.Alfred.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
             d:DataContext="{d:DesignInstance console:SimpleConsole}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto"                            
                  Padding="8">
        
        <ItemsControl ItemsSource="{Binding Path=Events}"                                                                
                      BorderThickness="0"                                                
                      FontSize="{StaticResource FontSizeSmall}" />
        
    </ScrollViewer>
    
</UserControl>
